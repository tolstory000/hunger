<style type="text/css">
	#div1{
		width: 150px;
		height: 300px;
		background: green;
		position: absolute;
		left: -150px;
	}
	#s{
		width: 20px;
		height: 60px;
		background: blue;
		position: absolute;
		top: 125px;
		right: -20px;
		cursor: pointer;
	}
</style>
<script type="text/javascript">
	window.onload=function(){
	var div1=document.getElementById("div1");
	var timer=null;

	div1.onmouseover=function(){
		startMove(0);}


	function startMove(pt){
		clearInterval(timer);
		var speed=0;
		timer=setInterval(function(){
			if(div1.offsetLeft>pt){
				speed=-10;
			}
			else{
				speed=10;
			}
			if(div1.offsetLeft==pt){
				clearInterval(timer);
			}
			else{
				div1.style.left=div1.offsetLeft+speed+'px';
			}
		},20);
	}
}
console.log(d1);


</script>
<body>
<div id="div1">
	<span id="s">分享到</span>
</div>
</body>
